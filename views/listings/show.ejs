<% layout("layouts/boilerplate.ejs")%>
<div class="row mt-3">
    <div class="col-8 offset-3">

        
    
    <h3>Listing details</h3>
    </div>
    <div class="card col-6 offset-3 show-card">
      <img src="<%= listing.image %>" alt="listing_image" class="card-img-top show-img" >
                        <div class="card-body">
              <p class="card-text">
                <b><%= listing.title %></b>
                <br>
              <%=listing.description %>
              <br>
              &#x20B9;<%=listing.price.toLocaleString("en-IN")%>
              <br>
              <%=listing.location %>
               <br>
               <%=listing.country %>
              </p>


            </div>
          </div>

          <div class="btns">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1   offset-3 edit-btn btn-edit" style="height: 100%;" >Edit</a>

          
          

            <form method="post" action="/listings/<%=listing._id%>?_method=DELETE" style="height: 100%;" >
                <button class="btn btn-dark del-btn offset-5" style="height: 100%;" >delete</button>
            </form>

          
          </div>

    
    <br><br>
    
    
    </div>
    
    

